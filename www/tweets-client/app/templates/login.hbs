    <div class="field">
      <label>User Name</label>
      {{input value=userName}}
    </div>
    <div class="field">
      <label>Password</label>
      {{input value=password type="password"}}
    </div>
    <button class="btn btn-primary" {{action "login"}}>Login</button>
  </div>
</div>
