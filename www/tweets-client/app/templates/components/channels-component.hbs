<div class="container">
  <div class="row">
    <div class="col">
      {{channel.name}}
    </div>
    <div class="col">
      {{channel.lecturer}}
    </div>
    <div class="col">
      {{#if channel.follows}}
        <button class="btn btn-dark" {{action "unfollow" channel}}>Unfollow</button>
      {{else}}
        <button class="btn btn-primary" {{action "follow" channel}}>Follow</button>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col">
      {{channel.program}}
    </div>
  </div>
</div>